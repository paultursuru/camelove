<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <h1 class="mb-4">Killing my <%= @animal.name %></h1>
      <%= simple_form_for(@animal) do |f| %>
        <%= f.input :dead, collection: [true, false] %>
        <%= f.submit 'Yes please kill that thing', class: 'btn btn-outline-success' %>
        <div class="btn btn-outline-warning ml-2"><%= link_to 'take me back to my dead puppie', animal_path(@animal) %></div>
      <% end %>
    </div>
  </div>
</div>
